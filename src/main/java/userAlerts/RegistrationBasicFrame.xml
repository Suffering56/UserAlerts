<?xml version="1.0" encoding="windows-1251"?>
<panel name="DarkGreyPanel">
	<layout type="FormLayout" columns="f:p:g" rows="f:p:g" />
	<panel constraints="1,1">
		<layout type="FormLayout" columns="10px:g, f:p, 10px, f:150px, 10px:g"
			rows="
				10px:g, f:p, 10px, f:p, 10px, 
					f:p, 10px, f:p, 10px, f:p, 
						10px, f:p, 10px, f:p, 10px:g" />

		<label constraints="2,2" text="Имя пользователя:" />
		<label constraints="2,4" text="Пароль:" />
		<label constraints="2,6" text="Подтверждение пароля:" />
		<label constraints="2,8" text="Телефон:" />
		<label constraints="2,10" text="E-mail:" />

		<textfield constraints="4,2" id="usernameField" name="input" />
		<passwordfield constraints="4,4" id="passField" name="input" />
		<passwordfield constraints="4,6" id="passConfirmField" name="input" />
		<textfield constraints="4,8" id="phoneField" name="input" />
		<textfield constraints="4,10" id="emailField" name="input" />

		<panel constraints="2,12,3,1">
			<layout type="FormLayout" columns="p:g, f:p, p:g" rows="f:p" />
			<checkBox constraints="2,1" id="agreeCheckBox" text="Согласен получать email и sms рассылку" />
		</panel>

		<panel constraints="2,14,3,1">
			<layout type="FormLayout" columns="p:g, f:100px, 10px, f:100px, p:g" rows="f:p" />
			<button constraints="2,1" id="applyBtn" name="alerts.main_button" text="Применить" action="APPLY" />
			<button constraints="4,1" name="alerts.main_button" text="Отменить" action="CANCEL" />
		</panel>
	</panel>

</panel>