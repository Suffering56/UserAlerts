<?xml version="1.0" encoding="windows-1251"?>
<panel name="DarkGreyPanel">
	<layout type="FormLayout" columns="10px:g, f:p, 10px:g" rows="10px:g, f:p, 10px:g" />

	<panel constraints="2,2">
		<layout type="FormLayout" columns="f:p" rows="f:p, 10px, 1px, 10px, f:p, f:p, f:p" />

		<panel constraints="1,1">
			<layout type="FormLayout" columns="f:p, 10px, f:p, 10px:g, f:p" rows="f:p, 10px, f:p, 10px, f:p, 10px, f:p, 10px, f:p" />

			<label constraints="1,1" text="Название алерта" />
			<combobox constraints="5,1" id="alertNameComboBox" editable="true" />

			<label constraints="1,3" text="Инструмент" />
			<combobox constraints="5,3" id="instrumentComboBox" editable="true" />

			<label constraints="1,5" text="Площадка" />
			<combobox constraints="5,5" id="marketPlaceComboBox" editable="true" />

			<label constraints="1,7" text="Показатель" />
			<combobox constraints="3,7" id="directionNameComboBox" initclass="gui.panel.userAlerts.overridden.model.QuotesDirectionNameComboModel" />

			<panel constraints="5,7">
				<layout type="FormLayout" columns="f:50px, 10px:g, f:100px" rows="f:p" />

				<combobox constraints="1,1" id="directionExpressionComboBox" initclass="gui.panel.userAlerts.overridden.model.QuotesDirectionExpressionComboModel" />
				<textfield constraints="3,1" id="directionValueTextField" name="input" />
			</panel>

			<label constraints="1,9" text="Линии алерта" />
			<button constraints="3,9" name="alerts.main_button" text="Выбрать цвет" />
			<button constraints="5,9" name="alerts.main_button" text="Показать на графике" action="SHOW_CHART" />
		</panel>

		<separator constraints="1,3" orientation="HORIZONTAL" />

		<panel constraints="1,5" id="chartJPanel" visible="false">
			<layout type="FormLayout" columns="p:g, f:p, p:g" rows="f:p, 10px, 1px, 10px" />

			<label constraints="2,1" text="График" />
			<separator constraints="1,3,3,1" orientation="HORIZONTAL" />
		</panel>

		<panel constraints="1,6">
			<layout type="FormLayout" columns="f:p, p:g, f:p" rows="f:p, 10px, f:p, 10px, f:p, 10px, f:p, 10px, f:p, 10px, f:p" />

			<checkbox constraints="1,1" id="emailCheckBox" text="Информировать по e-mail" />
			<combobox constraints="3,1" id="emailComboBox" editable="true" />

			<checkbox constraints="1,3" id="phoneCheckBox" text="Информировать по SMS" />
			<combobox constraints="3,3" id="phoneComboBox" editable="true" />

			<checkbox constraints="1,5" id="melodyCheckBox" text="Звуковой сигнал" />
			<combobox constraints="3,5" id="melodyComboBox" editable="true" />

			<checkbox constraints="1,7" id="notifyWindowCheckBox" text="Всплывающее окно" />

			<checkbox constraints="1,9" id="keepHistoryCheckBox" text="Хранить историю" selected="true" />
	
			<label constraints="1,11" text="Количество срабатываний" />
			<textfield constraints="3,11" id="lifetimeTextField" name="input" text="999" />
		</panel>

		<panel constraints="1,7">
			<layout type="FormLayout" columns="f:p, 10px:g, f:p, 10px, f:p" rows="10px, f:p" />

			<combobox constraints="1,2" id="statusComboBox" initclass="gui.panel.userAlerts.overridden.model.AlertStatusComboModel" />
			<button constraints="3,2" name="alerts.main_button" text="Применить" action="APPLY" />
			<button constraints="5,2" name="alerts.main_button" text="Отменить" action="CANCEL" />
		</panel>
	</panel>
</panel>